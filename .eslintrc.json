{
  "root": true,
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "standard-with-typescript",
    "plugin:prettier/recommended",
    "prettier"
  ],
  "ignorePatterns": ["*.d.ts"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": "./tsconfig.base.json",
    "ecmaVersion": "latest",
    "sourceType": "module"
  },

  "overrides": [],
  "rules": {
    "no-unused-vars": "error",
    "semi": "error",
    "@typescript-eslint/no-unused-vars": "error",
    "quotes": [
      "error",
      "double",
      {
        "avoidEscape": true
      }
    ],
    "@typescript-eslint/quotes": [
      "error",
      "double",
      {
        "avoidEscape": true
      }
    ]
  }
}
